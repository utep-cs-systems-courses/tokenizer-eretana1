# Compiler flags. -g for debug -O3 for optimization
CFLAGS=-g -O3

# Default target
all: uimain

# Include file depedencies
tokenizer.o: tokenizer.h
uimain.o: tokenizer.h
history.o: history.h

# $@=target, $^=prerequisites
uimain: tokenizer.o uimain.o history.o
	cc -o $@ $^ $(CFLAGS)

# Delete files generated by compilation
clean:
	rm -f *.o uimain

run: uimain
	./uimain
